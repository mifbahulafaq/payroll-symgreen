<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Ubah Password</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="#">Home</a></li>
              <li class="breadcrumb-item active">Ubah Password</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <!-- left column -->
          
          <div class="col-md-11">
            <% if(messages.error){ %>
              <div class="alert alert-danger alert-dismissible">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                <h5><i class="icon fas fa-ban"></i> Gagal!</h5>
                <%= messages.error  %>
              </div> 
              <% }
              if(messages.success){ %>
                <div class="alert alert-success alert-dismissible">
                  <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                  <h5><i class="icon fas fa-ban"></i> Berhasil!</h5>
                  <%= messages.success  %>
                </div> 
              <% } %>
            <!-- Horizontal Form -->
            <div class="card card-info">
              <div class="card-header">
                <h3 class="card-title">Form</h3>
              </div>
              <!-- /.card-header -->
              <!-- form start -->
              <form method="POST" action="/ubah-password" class="form-horizontal">
                <div class="card-body">
                  <div class="form-group row">
                    <label for="pwdLama" class="col-sm-2 col-form-label">Password Lama</label>
                    <div class="col-sm-4">
                      <input name="pwdLama" type="password" class="form-control" id="pwdLama" required>
                    </div>
                  </div>
                  <div>
                    <h4 class="pass_minim" style="margin-left: 170px;color:red; display : none;font-size: 12px;">
                      <i>
                        <b>Password minim 5 karakter</b>
                      </i>
                    </h4>
                  </div>
                  <div class="form-group row">
                    <label for="pwdBaru" class="col-sm-2 col-form-label">Password Baru</label>
                    <div class="col-sm-4">
                      <input name="pwdBaru" type="password" class="form-control passBaru" required>
                    </div>
                  </div>
                  <div>
                    <h4 class="pass_sama" style="margin-left: 170px;color:red; display : none;font-size: 12px;">
                      <i>
                        <b>Password Tidak Sama</b>
                      </i>
                    </h4>
                  </div>
                  <div class="form-group row">
                    <label for="pwdBaru2" class="col-sm-2 col-form-label">Ulangi Password Baru</label>
                    <div class="col-sm-4">
                            <input type="password" class="form-control passBaru2" required>
                    </div>
                  </div>
                </div>
                <!-- /.card-body -->
                <div class="card-footer">
                    <input name="_method"  type="hidden" value="PUT">
                  <button type="submit" class="btn btn-ubah btn-info"> <i class="fa fa-save"></i> Ubah</button>
                  <button type="reset" class="btn btn-default">Reset</button>
                </div>
                <!-- /.card-footer -->
              </form>
            </div>
            <!-- /.card -->

          </div>
          <!--/.col (left) -->
          
        </div>
        <!-- /.row -->
      </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->

  <script>
    const passBaru = document.getElementsByClassName('passBaru')[0]
    const passBaru2 = document.getElementsByClassName('passBaru2')[0]
    const pass_minim = document.getElementsByClassName('pass_minim')[0]
    const pass_sama = document.getElementsByClassName('pass_sama')[0]
    const btn = document.getElementsByClassName('btn-ubah')[0]
    
    passBaru.addEventListener('input',()=>{
        if(passBaru.value.length<5 && passBaru.value){
            pass_minim.style.display = ''
        }else{
            pass_minim.style.display = 'none'
        }
        if(passBaru2.value){
            if(passBaru.value!==passBaru2.value){
                pass_sama.style.display = '';
            }else{
                pass_sama.style.display = 'none';
            }
        }
        if(pass_minim.style.display && pass_sama.style.display){
            btn.setAttribute('type','submit')
        }else{
            btn.setAttribute('type','button')
        }
    })
    passBaru2.addEventListener('input',()=>{
        
        if(passBaru2.value!==passBaru.value && passBaru2.value){
            pass_sama.style.display = '';
        }else{
            pass_sama.style.display = 'none';
        }
        if(pass_minim.style.display && pass_sama.style.display){
            btn.setAttribute('type','submit')
        }else{
            btn.setAttribute('type','button')
        }
    })
  </script>